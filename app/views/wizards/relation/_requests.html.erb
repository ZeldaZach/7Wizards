<div class="main_col_content" id="friends_request">
  <div class="visibl">
    <h1 class="category_title_shop"><%= t :title %></h1>

    <div class="bes_search">
      <table class="content_up table" cellpadding="0" cellspacing="0"  >
        <tr class="tableWidth">
          <th scope="col" class="index_cell"></th>
          <th scope="col"><%= tf(User, :name) %></th>
          <th scope="col"><%= tf(Relation, :request_message) %></th>
          <th ><%= tg(:actions) %></th>
        </tr>
        <% relations.each_with_index do |relation, index| %>
          <tr>
            <td class="index_cell"><%= paginate_index(@page, index) %></td>
            <td><%= user_link relation.user %></td>
            <td ><div style="height:15px;overflow-y:hidden; max-width: 400px"><%= h relation.request_message %></div></td>
            <td>
              <%= link_to_ajax tg(:allow), :url =>  relation_path(:action => :accept_request, :id => relation.user.id, :callback_url => callback_url) %>
              <%= link_to_ajax tg(:deny), :url =>  relation_path(:action => :reject_request, :id => relation.user.id, :callback_url => callback_url) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="clear"></div>
  <%= paginate relations %>
  <div class="main_col_bg"></div>
  <div class="main_col_border_bottom"></div>
  <div class="main_col_border_top"></div>
</div>